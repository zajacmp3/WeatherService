commands:
  create_post_deploy_folder:
    command: "mkdir /opt/elasticbeanstalk/hooks/appdeploy/post"
    ignoreErrors: true
  write_to_nginx: 
    command: "cat > /opt/elasticbeanstalk/hooks/appdeploy/post/99_elastic_beanstalk_proxy.sh <<EOF echo -e \"upstream nodejs { server 127.0.0.1:8081; keepalive 256; } server { listen 8080; location / { proxy_pass  http://nodejs; proxy_set_header   Connection \"\"; proxy_set_header Upgrade $http_upgrade; proxy_set_header Connection \"upgrade\"; proxy_http_version 1.1; proxy_set_header        Host            $host; proxy_set_header        X-Real-IP       $remote_addr; proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for; } gzip on; gzip_comp_level 4; gzip_types text/html text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript; }\" > /etc/nginx/conf.d/00_elastic_beanstalk_proxy.conf EOF"